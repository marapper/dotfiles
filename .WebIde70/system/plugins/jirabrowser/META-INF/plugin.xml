<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE idea-plugin PUBLIC "" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin>
    <name>Jira Browser</name>
    <description>
        The Jira Issue Browser plugin integrates the Atlassian Jira ( http://www.atlassian.com ) issue tracking
        system into the IntelliJ IDEA development environment. The plugin provides quick access to assigned and
        outstanding issues and the ability to annotate classes/methods worked on whilst developing against an issue.
        The plugin also provides the ability to create, comment, and resolve issues direct fromm the IntelliJ
        environment.
    </description>
    <version>0.3.3</version>
    <vendor>Mark Derricutt</vendor>
    <!--<depends>WebServicesPlugin</depends>-->
    <idea-version since-build="7312"/>

    <project-components>
        <component>
            <implementation-class>com.talios.jira.idea.JiraConfigurationComponent</implementation-class>
            <option name="workspace" value="true"/>
        </component>
        <component>
            <implementation-class>com.talios.jira.idea.intentions.JiraTODOIssueCreationIntention</implementation-class>
        </component>
        <component>
            <implementation-class>com.talios.jira.idea.intentions.JiraIssueBrowseIntention</implementation-class>
        </component>
        <component>
            <implementation-class>com.talios.jira.idea.intentions.JiraIssueCommentIntention</implementation-class>
        </component>
        <component>
            <implementation-class>com.talios.jira.idea.intentions.JiraWorkOnIssueIntention</implementation-class>
        </component>
    </project-components>

    <actions>
        <group id="JIRAGroup" popup="true" text="JIRA">
            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="Compile"/>
            <separator/>
        </group>

        <action class="com.talios.jira.idea.actions.WorkOnIssueAction" text="Work On _Issue" id="workOnIssue"
                description="Select a JIRA issue to work on.">
            <add-to-group group-id="JIRAGroup" anchor="last"/>
            <keyboard-shortcut first-keystroke="ctrl alt shift I" keymap="$default"/>
        </action>
        <action class="com.talios.jira.idea.actions.CreateIssueAction" text="Create _Issue" id="createAnIssue"
                description="Create a new issue.">
            <add-to-group group-id="JIRAGroup" anchor="last"/>
            <keyboard-shortcut first-keystroke="ctrl shift I" keymap="$default"/>
        </action>
        <action class="com.talios.jira.idea.actions.AssignedIssuesAction" text="_Assigned Issues" id="assignedIssues"
                description="View assigned issues.">
            <add-to-group group-id="JIRAGroup" anchor="last"/>
        </action>
        <action class="com.talios.jira.idea.actions.InProgressIssuesAction" text="_In Progress Issues"
                id="inProgressIssues" description="View in progress issues.">
            <add-to-group group-id="JIRAGroup" anchor="last"/>
        </action>
        <action class="com.talios.jira.idea.actions.UnresolvedIssuesAction" text="_Unresolved Issues"
                id="unResolvedIssues" description="View unsolved issues.">
            <add-to-group group-id="JIRAGroup" anchor="last"/>
        </action>
        <action class="com.talios.jira.idea.actions.SearchIssueAction" text="_Search for Issues" id="searchAnIssue"
                description="Search for issues...">
            <add-to-group group-id="JIRAGroup" anchor="last"/>
        </action>

        <action class="com.talios.jira.idea.actions.FixedInIdeaBuildAction" text="Browse IntelliJ JIRA Isssues"
                id="fixedInIdeaBuildHelp"
                description="View a list of issues fixed against this build of IDEA (using JetBrains JIRA install)">
            <add-to-group group-id="HelpMenu" anchor="last"/>
        </action>

    </actions>

    <change-notes>
        <![CDATA[
        See http://jira.atlassian.com/secure/BrowseProject.jspa?id=10521&report=changelog for changes.
   ]]>
    </change-notes>


</idea-plugin>
